	-ms-box-sizing border-box
	-moz-box-sizing border-box
	-o-box-sizing border-box
	-webkit-box-sizing border-box


columnas()
	-moz-column-count 2
	-webkit-column-count 2
	column-count 2
	-webkit-column-gap 40px
	-moz-column-gap 40px
	column-gap 40px
