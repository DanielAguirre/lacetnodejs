		padding 0.8em
		p
			label
				color black			
				display inline-block
				font-weight bold
				width 100px
			strong
				color red
				font-size 14px
				width 140px	


footer
	background lighten(#F00, 20%)
	color rgba(white, 0.8)
	padding 1em 0
	text-align center
	width 100%
	h3
		margin-top .8em
		span
			display block
		.autor
			&:after
			&:before
				content " - "
header
	background COLOR
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color rgbawhite
	padding 0.5em
	position relative
	overflow hidden
	z-index 1
	
	.carrito
		img
			height 20px
			width 20px
		// &:before
		// 	font-style 'iconos'
		// 	content "\e600"
	.login
		position absolute
		right 10px
		top 10px
		a
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			margin 0 5px			
			text-decoration none
		strong
			color white	
			&:hover
				cursor pointer

	.logo
		border-right 1px solid azul
		float left
		width 60px
		&:hover
			cursor pointer
		img
			width 52px
		
	.titular
		margin 0 90px 0 70px		
		.titulo
			color white
			font-size 18px
			font-weight normal		
nav
	background azul	
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute
		top 0
		left 0px
	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		overflow-y auto
		white-space nowrap

		&::-webkit-scrollbar
			display none							
		a
			&:hover
				background rgba(0,0,0,0.1)
	li
		margin 0
		padding 0
		display inline-block
		a
			color white
			display block
			margin 0 0.5em
			padding 0 1.8em
			text-decoration none

.slider	
	padding 1.5em

