COLOR=#01354f

*
	border 0
	margin 0
	padding 0

a
	color COLOR
	font-weight bold
	text-decoration none
	&:hover
		color #F60

aside
	display inline-block
	margin 40px 50px
	width 150px
	img
		display inline-block
		margin .4em
		height 65px
		width 95px
		&:hover
			cursor pointer

div.slider
	box-shadow 2px 10px 28px #746e6e	
	display inline-block
	margin 100px 40px	
	li
		img
			height 550px
			width 950px

header
	background COLOR
	height 230px
	margin -.5em auto
	width 100%
	a
		color White
		letter-spacing 2.5px
		h3
			font-size 1.0em
			text-align right
			margin .5em 10em
	img
		margin auto 6em
	input	
		margin -5.5em 18em
		float right
		height 30px
			
nav
	font-size 1.3em
	margin 1.5em 10em
	text-align right
	width 70%
	ul 
		list-style-tie normal
	li
		cursor pointer
		display inline-block
		margin auto .5em
		vertical-align top

