COLOR=#01354f

transition(n)
	-ms-transition all ns ease-out
	-moz-transition all ns ease-out
	-o-transition all ns ease-out
	-webkit-transition all ns ease-out	
	transition all ns ease-out

*	
	border 0
	margin 0	
	padding 0

header
	background COLOR
	box-shadow 2px 10px 28px #746e6e
	margin 0 auto		
	width 100%
	div
		background url('../img/marca.jpg')		
		background-repeat no-repeat
		height 8em
		margin auto auto
		width 16em

div.galeria	
	height 100%
	margin 40px auto	
	width 80%
	div
		background #456
		display inline-block
		height 260px		
		margin  25px 45px		
		width 260px		
		a			
			color black
			text-decoration none
			&:link
				text-decoration none
			img
				border thin solid 5px
				height 250px
				margin  5px 5px
				position absolute
				width 250px
				&:hover
					cursor pointer
			h4
				width 200px
				position relative
				text-align center			
				top 236px
				visibility hidden
		&:hover
			h4
			background rgba(#456, 0.5)					
			visibility visible

div#home
	background COLOR
	border-radius 5px
	color white
	height 2.5em 
	margin auto auto
	text-align justify
	width 210px
	h1		
		margin auto 1.7em 
		padding-bottom .2em
	&:hover	
		background rgba(black, 0.8)			
		color white
		cursor pointer
		transition(25)